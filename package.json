{
  "name": "ai-helper",
  "displayName": "AI Helper",
  "description": "VSCode extension that provides AI suggestions for selected text using OpenAI API.",
  "version": "0.0.1",
  "publisher": "cogitoai",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": ["Other"],
  "activationEvents": ["onCommand:ai-helper.suggest"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-helper.suggest",
        "title": "AI Suggestion"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "AI Helper",
      "properties": {
        "ai-helper.apiKey": {
          "type": "string",
          "description": "Your OpenAI API key"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "openai": "^4.24.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "typescript": "^5.0.0",
    "tslint": "^6.1.3",
    "vscode-test": "^1.6.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hissain/NoQuota.git" 
  },
  "keywords": [
    "AI",
    "VSCode",
    "Extension",
    "Utility",
    "CogitoAI"
  ],
  "license": "MIT"
}
