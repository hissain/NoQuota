{
  "name": "ai-helper-pro",
  "displayName": "AI Helper Pro",
  "description": "Multi-model AI assistant for VSCode with automatic fallback, code completion, and quota management.",
  "version": "1.0.0",
  "publisher": "cogitoai",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Snippets"
  ],
  "activationEvents": [
    "onCommand:ai-helper.suggest",
    "onCommand:ai-helper.configure",
    "onCommand:ai-helper.toggleCompletion",
    "onCommand:ai-helper.test",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:python",
    "onLanguage:java",
    "onLanguage:cpp",
    "onLanguage:c",
    "onLanguage:csharp",
    "onLanguage:go",
    "onLanguage:rust",
    "onLanguage:php",
    "onLanguage:html",
    "onLanguage:css",
    "onLanguage:json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-helper.suggest",
        "title": "AI Suggestion",
        "category": "AI Helper"
      },
      {
        "command": "ai-helper.configure",
        "title": "Configure AI Models",
        "category": "AI Helper"
      },
      {
        "command": "ai-helper.toggleCompletion",
        "title": "Toggle AI Code Completion",
        "category": "AI Helper"
      },
      {
        "command": "ai-helper.test",
        "title": "Test Extension",
        "category": "AI Helper"
      }
    ],
    "keybindings": [
      {
        "command": "ai-helper.suggest",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a",
        "when": "editorTextFocus"
      },
      {
        "command": "ai-helper.toggleCompletion",
        "key": "ctrl+shift+alt+a",
        "mac": "cmd+shift+alt+a"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "ai-helper.suggest",
          "when": "editorTextFocus",
          "group": "ai-helper"
        }
      ],
      "commandPalette": [
        {
          "command": "ai-helper.suggest",
          "when": "editorTextFocus"
        },
        {
          "command": "ai-helper.configure"
        },
        {
          "command": "ai-helper.toggleCompletion"
        },
        {
          "command": "ai-helper.test"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "AI Helper Pro",
      "properties": {
        "ai-helper.models": {
          "type": "array",
          "description": "AI model configurations with API keys, priorities, and settings",
          "default": []
        },
        "ai-helper.enableCompletion": {
          "type": "boolean",
          "description": "Enable AI-powered code completion",
          "default": false
        },
        "ai-helper.completionDelay": {
          "type": "number",
          "description": "Delay in milliseconds before triggering completion",
          "default": 500,
          "minimum": 100,
          "maximum": 5000
        },
        "ai-helper.maxCompletionLength": {
          "type": "number",
          "description": "Maximum length of AI completions",
          "default": 200,
          "minimum": 50,
          "maximum": 1000
        },
        "ai-helper.suggestionTimeout": {
          "type": "number",
          "description": "Timeout for AI suggestions in milliseconds",
          "default": 30000,
          "minimum": 5000,
          "maximum": 120000
        }
      }
    }
  },
    "scripts": {
    "build": "esbuild src/extension.ts --bundle --platform=node --outfile=out/extension.js --external:vscode"
  },
  "dependencies": {
    "openai": "^4.24.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "esbuild": "^0.25.9",
    "tslint": "^6.1.3",
    "typescript": "^5.0.0",
    "vscode-test": "^1.6.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hissain/NoQuota.git"
  },
  "files": [
    "out",
    "images"
  ],
  "keywords": [
    "AI",
    "VSCode",
    "Extension",
    "Utility",
    "CogitoAI",
    "OpenAI",
    "Claude",
    "Gemini",
    "Code Completion",
    "Multi-Model",
    "Fallback",
    "Quota Management"
  ],
  "license": "MIT"
}
